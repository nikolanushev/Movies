@model List<SoproSpringBoard.Domain.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center" style="padding-top: 70px;">All genres</h3>
<hr />

<div class="container">
    <div class="col mb-3">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <a class="btn btn-secondary bi bi-plus-circle float-right" asp-controller="Genres" asp-action="Create">New Genre</a>
            </div>
        </div>
    </div>
</div>


<div class="container">
    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="card" style="width: 21rem; margin:10px;">
                <div class="card-body">
                    <h5 class="card-title" style="text-align: center;">@item.Name</h5>
                </div>
            </div>

            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>


